                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SourceIP}" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding DestinationIP}" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Protocol}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>-->
    </Grid>
</Window>
