<Window x:Class="SnifferWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnifferWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="btn" x:Name="btn" FontSize="30"></Button>
        <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Visible">
            <StackPanel x:Name="PacketList">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
