<Window x:Class="SnifferWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnifferWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="IPPacket">
            
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button Content="Start" Width="50" HorizontalAlignment="Left"/>
            <Separator Grid.Row="1" Grid.ColumnSpan="2" Margin="0 5 0 0"/>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 2">
                    <WrapPanel Width="160">
                        <TextBlock Text="Source IP: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                      Path=CurrentlySelected.SourceIP}"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="Destination IP: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                      Path=CurrentlySelected.DestinationIP}"/>
                    </WrapPanel>
                </WrapPanel>
                <WrapPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 2">
                    <WrapPanel Width="120">
                        <TextBlock Text="IP Version: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                      Path=CurrentlySelected.IPVersion}"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="Transport Protocol: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                      Path=CurrentlySelected.Protocol}"/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                      Path=CurrentlySelected.RawProtocol}"/>
                    </WrapPanel>
                </WrapPanel>
                <WrapPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 2">
                    <WrapPanel Width="120">
                        <TextBlock Text="ID Number: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                          Path=CurrentlySelected.IdentificationNumber}"/>
                    </WrapPanel>
                    <WrapPanel Width="70">
                        <TextBlock Text="Flags: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                          Path=CurrentlySelected.Flags}"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="Offset: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                          Path=CurrentlySelected.FragmentOffset}"/>
                    </WrapPanel>
                </WrapPanel>
                <WrapPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 2">
                    <WrapPanel Width="70">
                        <TextBlock Text="TTL: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                          Path=CurrentlySelected.TTL}"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="Checksum: "/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                          Path=CurrentlySelected.Checksum}"/>
                    </WrapPanel>
                </WrapPanel>
            </Grid>
            <Line xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  Grid.Row="3" Grid.ColumnSpan="2"
                  X1="0"   Y1="3"
                  X2="500" Y2="3"
                  Stroke="Black" StrokeDashArray="4, 5" StrokeThickness="1"/>
            <Grid Grid.Row="4" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
            </Grid>
        </Grid>
        <DataGrid Grid.Column="1" ColumnWidth="*" Margin="10"
                  ItemsSource="{Binding CapturedPackets}" AutoGenerateColumns="False"
                  RowBackground="#FFE5F3FF" AlternatingRowBackground="#FFE8FFE5" AlternationCount="2"
                  MouseLeftButtonUp="Row_MouseLeftButtonUp">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Source IP" Binding="{Binding SourceIP}"/>
                <DataGridTextColumn Header="Destination IP" Binding="{Binding DestinationIP}"/>
                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--<ListBox x:Name="phonesList" ItemsSource="{Binding CapturedPackets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding SourceIP}" Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding DestinationIP}" Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding Protocol}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
        
        <!--<ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Visible">
            <ItemsControl x:Name="tStack" ItemsSource="{Binding Path=CapturedPackets}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SourceIP}" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding DestinationIP}" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Protocol}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>-->
    </Grid>
</Window>
